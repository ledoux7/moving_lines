root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# JS encoding and indentation
[*.js]
charset = utf-8
indent_style = space
indent_size = 2

# Makefile indentation
[Makefile]
indent_style = tab

# Package.json indentation
[package.json]
indent_style = space
indent_size = 2
